<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashayne.cryptodash.view.AddTokenController">
    <TableView fx:id="tokenTable" prefHeight="400" prefWidth="600">
        <placeholder>
            <Label text="Loading..."/>
        </placeholder>
        <columns>
            <TableColumn fx:id="logoColumn" prefWidth="150" text="Logo" />
            <TableColumn fx:id="nameColumn" prefWidth="200" text="Name" />
            <TableColumn fx:id="symbolColumn" prefWidth="100" text="Symbol" />
            <TableColumn fx:id="addButtonColumn" prefWidth="150" text="Favourite" />
        </columns>
    </TableView>
</VBox>
